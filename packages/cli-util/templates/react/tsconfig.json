{
  "extends": "@di/typescript-config/vite.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "module": "ESNext",

    /* Bundler mode */
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "vite.config.ts"]
}
